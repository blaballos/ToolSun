                                <a href="/" class="hover:text-gray-400 transition duration-200">Popover</a>
                            </li>
                            <li>
                                <a href="/" class="hover:text-gray-400 transition duration-200">Radio</a>
                            </li>
                            <li>
                                <a href="/" class="hover:text-gray-400 transition duration-200">Select</a>
                            </li>
                            <li>
                                <a href="/" class="hover:text-gray-400 transition duration-200">Skeleton</a>
                            </li>
                            <li>
                                <a href="/" class="hover:text-gray-400 transition duration-200">Slider</a>
                            </li>
                            <li>
                                <a href="/" class="hover:text-gray-400 transition duration-200">Spinner</a>
                            </li>
                            <li>
                                <a href="/" class="hover:text-gray-400 transition duration-200">Switch</a>
                            </li>
                            <li>
                                <a href="/" class="hover:text-gray-400 transition duration-200">Table</a>
                            </li>
                            <li>
                                <a href="/" class="hover:text-gray-400 transition duration-200">Tabs</a>
                            </li>
                            <li>
                                <a href="/" class="hover:text-gray-400 transition duration-200">Textarea</a>
                            </li>
                            <li>
                                <a href="/" class="hover:text-gray-400 transition duration-200">Tooltip</a>
                            </li>
                            <li>
                                <a href="/" class="hover:text-gray-400 transition duration-200">User</a>
                            </li>
                         </ul>
                      </li>
                   </ul>
                </div>
             </aside>
             
             <slot />
		</main>
	</body>
</html>

<style is:global>
	body {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: 'Onest Variable', sans-serif;
		background: #13151a;
	}
</style>