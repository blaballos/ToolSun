---
const textCode = Astro.props.textCode;
const { titleCode } = Astro.props;

import CopyIcon from "./icons/CopyIcon.astro";
---

<div class=`relative bg-gray-950 shadow-xl`>
    <header class="w-full flex items-center justify-between py-2 px-2 bg-transparent">
        <div class="flex gap-2 items-center basis-1/3">
            <div class="w-3 h-3 rounded-full bg-red-500"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
        </div>
        <div class="flex justify-center items-center basis-1/3">
            <p class="text-white/30 text-xs font-light">{titleCode}</p>
        </div>
        <div class="flex basis-1/3"></divc>
    </header>
    <pre class=`flex text-sm text-white/80 leading-5 bg-gray-900 py-4 px-4 text-wrap overflow-y-auto overflow-x-auto max-w-7xl`>
        <code id="code-content">{textCode}</code>
    </pre>
    <button class="absolute right-2 top-0 flex justify-center items-center w-6 h-6 bg-transparent rounded-lg text-white hover:bg-gray-700 transition duration-200" aria-label="Copy code" onclick="navigator.clipboard.writeText(this.previousElementSibling.textContent)">
        <CopyIcon class="size-4"/>
    </button>
</div>

