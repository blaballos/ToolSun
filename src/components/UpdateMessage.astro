---
import Avatar from "./Avatar.astro"

const { title, text, date, author, link } = Astro.props
---

<div class="flex flex-col max-w-xl">
    <p class="text-xs md:text-sm text-white opacity-80 pb-2">
        <time datetime="2024-12-09">{date}</time>
    </p>
    <h3 class="text-xl md:text-2xl font-semibold text-white pb-2">
        {title}
    </h3>
    <a href="/Components" class="text-sm md:text-md text-white opacity-80 text-pretty pb-4">
        {text}
    </a>
    <Avatar 
    class="text-sm"
    nombre={author}
    link={link}/>
</div>