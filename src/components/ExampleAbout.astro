---
import ArrowIcon from './icons/ArrowIcon.astro';

interface Props {
    title:string;
    description:string;
    buttonText:string;
    class:string;
}

const { title, description, buttonText, class:className } = Astro.props
---

<div class="flex flex-col md:flex-row space-y-6 md:space-x-2">
    <div class="w-full md:w-1/2">
        <h2 class="text-white text-4xl lg:text-6xl font-semibold text-wrap pb-2">{title}</h2>
        <p class="text-white text-lg lg:text-xl opacity-70 text-pretty pb-6">{description}</p>
        <a href="/Elements/Buttons" class=`inline-flex items-center text-gray-950 text-sm lg:text-md font-bold gap-x-1 lg:gap-x-2 border-none rounded-lg px-3 py-2 bg-gradient-to-tr ${className} hover:brightness-110 transition duration-300`>
            {buttonText}
            <ArrowIcon class="size-4"/>
        </a>
    </div>
    <div class="w-full md:w-1/2 flex flex-col items-center justify-center">
        <slot />
    </div>
</div>